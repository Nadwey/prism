<Page x:Class="prism.Windows.UserAgreement.Intro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prism.Windows.UserAgreement"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="prism:intro" Loaded="Page_Loaded" Foreground="#FFFFFFFF" SizeChanged="Page_SizeChanged" Background="#7F000000">

    <Grid>
        <StackPanel x:Name="headerhandler" Margin="0,50,0,0">
            <TextBlock FontFamily="/Fonts/#Ethnocentric" TextAlignment="Center" Text="WELCOME TO" Foreground="White"/>
            <TextBlock FontFamily="/Fonts/#Ethnocentric" TextAlignment="Center" Margin="0,-10,0,0" Text="PRISM" FontSize="40">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FF3600FF"/>
                        <GradientStop Color="#FF801ED4" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground></TextBlock>
        </StackPanel>
    </Grid>
</Page>
